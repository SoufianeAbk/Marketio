@model Marketio_Shared.DTOs.CreateOrderDto
@using Marketio_Shared.Enums
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Checkout"];
    var cartTotal = ViewBag.CartTotal as decimal? ?? 0;
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-cart-check"></i> @Localizer["Checkout"]
    </h1>

    <form asp-action="PlaceOrder" method="post">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-person-circle"></i> @Localizer["CustomerInformation"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="CustomerId" class="form-label">@Localizer["EmailCustomerId"]</label>
                            <input asp-for="CustomerId" class="form-control" placeholder="@Localizer["YourEmail"]" required />
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-geo-alt"></i> @Localizer["ShippingInformation"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="ShippingAddress" class="form-label">@Localizer["ShippingAddress"]</label>
                            <textarea asp-for="ShippingAddress" class="form-control" rows="3"
                                      placeholder="@Localizer["ShippingAddressPlaceholder"]" required></textarea>
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BillingAddress" class="form-label">@Localizer["BillingAddress"]</label>
                            <textarea asp-for="BillingAddress" class="form-control" rows="3"
                                      placeholder="@Localizer["BillingAddressPlaceholder"]" required></textarea>
                            <span asp-validation-for="BillingAddress" class="text-danger"></span>
                            <button type="button" class="btn btn-sm btn-outline-secondary mt-2"
                                    onclick="document.querySelector('[name=BillingAddress]').value = document.querySelector('[name=ShippingAddress]').value">
                                <i class="bi bi-files"></i> @Localizer["CopyShippingAddress"]
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">
                            <i class="bi bi-credit-card"></i> @Localizer["PaymentMethod"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="PaymentMethod" class="form-label">@Localizer["SelectPaymentMethod"]</label>
                            <select asp-for="PaymentMethod" class="form-select" required>
                                <option value="">-- @Localizer["Select"] --</option>
                                @foreach (PaymentMethod method in Enum.GetValues(typeof(PaymentMethod)))
                                {
                                    <option value="@((int)method)">@Localizer[$"PaymentMethod_{method}"]</option>
                                }
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-receipt"></i> @Localizer["OrderSummary"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>@Localizer["Subtotal"]:</span>
                            <span>€@cartTotal.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>@Localizer["ShippingCost"]:</span>
                            <span class="text-success">@Localizer["Free"]</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>@Localizer["TotalToPay"]:</strong>
                            <strong class="text-success fs-4">€@cartTotal.ToString("F2")</strong>
                        </div>

                        <button type="submit" class="btn btn-success w-100 mb-3">
                            <i class="bi bi-check-circle"></i> @Localizer["PlaceOrder"]
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-arrow-left"></i> @Localizer["BackToCart"]
                        </a>

                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                <i class="bi bi-shield-lock"></i> @Localizer["YourDataIsSafe"]
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model IEnumerable<Marketio_Shared.DTOs.OrderDto>
@{
    ViewData["Title"] = "Mijn Bestellingen";
    var customerEmail = ViewBag.CustomerEmail as string ?? "";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-4">
                <i class="bi bi-bag-check"></i> Mijn Bestellingen
            </h1>
            <p class="lead text-muted">Overzicht van al uw bestellingen</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">
                <i class="bi bi-info-circle"></i> Geen bestellingen gevonden
            </h4>
            <p>U heeft nog geen bestellingen geplaatst.</p>
            <hr>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-box-seam"></i> Start met winkelen
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">
                                    <i class="bi bi-receipt"></i> @order.OrderNumber
                                </h6>
                                @switch (order.Status)
                                {
                                    case Marketio_Shared.Enums.OrderStatus.Pending:
                                        <span class="badge bg-warning text-dark">@order.StatusName</span>
                                        break;
                                    case Marketio_Shared.Enums.OrderStatus.Processing:
                                        <span class="badge bg-info">@order.StatusName</span>
                                        break;
                                    case Marketio_Shared.Enums.OrderStatus.Shipped:
                                        <span class="badge bg-light text-dark">@order.StatusName</span>
                                        break;
                                    case Marketio_Shared.Enums.OrderStatus.Delivered:
                                        <span class="badge bg-success">@order.StatusName</span>
                                        break;
                                    case Marketio_Shared.Enums.OrderStatus.Cancelled:
                                        <span class="badge bg-danger">@order.StatusName</span>
                                        break;
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-2">
                                <i class="bi bi-calendar"></i>
                                <small>@order.OrderDate.ToString("dd MMM yyyy HH:mm")</small>
                            </p>

                            <h6 class="mb-2">Producten:</h6>
                            <ul class="list-unstyled mb-3">
                                @foreach (var item in order.OrderItems.Take(3))
                                {
                                    <li class="small">
                                        <i class="bi bi-box"></i> @item.ProductName (@item.Quantity)x
                                    </li>
                                }
                                @if (order.OrderItems.Count > 3)
                                {
                                    <li class="small text-muted">
                                        <i class="bi bi-three-dots"></i> +@(order.OrderItems.Count - 3) meer...
                                    </li>
                                }
                            </ul>

                            <hr>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <strong>Totaal:</strong>
                                <h5 class="text-primary mb-0">€@order.TotalAmount.ToString("N2")</h5>
                            </div>

                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Bekijk Details
                                </a>

                                @if (order.Status == Marketio_Shared.Enums.OrderStatus.Pending)
                                {
                                    <form asp-action="Cancel" asp-route-id="@order.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Weet u zeker dat u deze bestelling wilt annuleren?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                            <i class="bi bi-x-circle"></i> Annuleren
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
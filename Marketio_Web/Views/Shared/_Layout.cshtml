@using Marketio_Web.Resources
@using Microsoft.Extensions.Localization
@using Marketio_Web
@inject IStringLocalizer<SharedResources> Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Marketio</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Marketio_Web.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop text-primary"></i> Marketio
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Index">
                                <i class="bi bi-house-door"></i> @Localizer["Home"]
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")"
                               asp-area=""
                               asp-controller="Products"
                               asp-action="Index">
                                <i class="bi bi-box-seam"></i> @Localizer["Products"]
                            </a>
                        </li>

                        <!--  Mijn Bestellingen (alleen voor ingelogde gebruikers) -->
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyOrders" ? "active" : "")"
                                   asp-controller="Orders"
                                   asp-action="MyOrders">
                                    <i class="bi bi-bag-check"></i> @Localizer["MyOrders"]
                                </a>
                            </li>
                        }

                        <!--  Bestellingen beheer (alleen voor Admin) -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Orders" && ViewContext.RouteData.Values["Action"]?.ToString() != "MyOrders" ? "active" : "")"
                                   asp-controller="Orders"
                                   asp-action="Index">
                                    <i class="bi bi-cart"></i> @Localizer["OrdersManagement"]
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"]?.ToString() == "Privacy" ? "active" : "")"
                               asp-area=""
                               asp-controller="Home"
                               asp-action="Privacy">
                                <i class="bi bi-shield-check"></i> @Localizer["Privacy"]
                            </a>
                        </li>
                    </ul>

                    <!-- Zoekbalk in Navigatie -->
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <form asp-controller="Products" asp-action="Index" method="get" class="d-flex" style="min-width: 300px;">
                                <input class="form-control form-control-sm me-2"
                                       type="search"
                                       name="searchTerm"
                                       placeholder="@Localizer["SearchPlaceholder"]"
                                       aria-label="Search">
                                <button class="btn btn-outline-primary btn-sm" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </form>
                        </li>
                    </ul>

                    <!--  Shopping Cart Badge -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark position-relative @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cart" ? "active" : "")"
                               asp-controller="Cart"
                               asp-action="Index">
                                <i class="bi bi-cart3 fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cart-count">
                                    0
                                </span>
                            </a>
                        </li>
                    </ul>

                    <!-- Taal Switcher -->
                    <ul class="navbar-nav ms-2">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-translate"></i> @Localizer["Language"]
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Culture" asp-action="Set" asp-route-culture="nl" asp-route-returnUrl="@Context.Request.Path">
                                        🇳🇱 Nederlands
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Culture" asp-action="Set" asp-route-culture="en" asp-route-returnUrl="@Context.Request.Path">
                                        🇬🇧 English
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Culture" asp-action="Set" asp-route-culture="fr" asp-route-returnUrl="@Context.Request.Path">
                                        🇫🇷 Français
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Marketio -
            <a asp-area=""
               asp-controller="Home"
               asp-action="Privacy">
                @Localizer["Privacy"]
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--  Cart Count Update Script -->
    <script>
        async function updateCartCount() {
            try {
                const response = await fetch('@Url.Action("GetCartCount", "Cart")');
                const data = await response.json();
                const badge = document.getElementById('cart-count');
                if (badge) {
                    badge.textContent = data.count;
                    badge.style.display = data.count > 0 ? 'inline-block' : 'none';
                }
            } catch (error) {
                console.error('Error updating cart count:', error);
            }
        }

        // Update cart count bij pagina laden
        document.addEventListener('DOMContentLoaded', updateCartCount);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@using Marketio_Web.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["PrivacyPolicy"];
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="text-center mb-5">
                <h1 class="display-4">
                    <i class="bi bi-shield-check text-primary"></i> @Localizer["PrivacyPolicy"]
                </h1>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">
                        <i class="bi bi-info-circle text-primary"></i> @Localizer["Introduction"]
                    </h2>
                    <p>@Localizer["PrivacyIntro"]</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">
                        <i class="bi bi-collection text-primary"></i> @Localizer["WhatDataWeCollect"]
                    </h2>
                    <p>@Localizer["DataCollectionIntro"]</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>@Localizer["IdentityData"]:</strong> @Localizer["IdentityDataDesc"]
                        </li>
                        <li class="list-group-item">
                            <strong>@Localizer["ContactData"]:</strong> @Localizer["ContactDataDesc"]
                        </li>
                        <li class="list-group-item">
                            <strong>@Localizer["TransactionData"]:</strong> @Localizer["TransactionDataDesc"]
                        </li>
                        <li class="list-group-item">
                            <strong>@Localizer["TechnicalData"]:</strong> @Localizer["TechnicalDataDesc"]
                        </li>
                        <li class="list-group-item">
                            <strong>@Localizer["ProfileData"]:</strong> @Localizer["ProfileDataDesc"]
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">
                        <i class="bi bi-graph-up text-primary"></i> @Localizer["HowWeUseData"]
                    </h2>
                    <p>@Localizer["DataUsageIntro"]</p>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card h-100 border-primary">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-cart-check text-primary"></i> @Localizer["OrderManagement"]
                                    </h5>
                                    <p class="card-text small">@Localizer["OrderManagementDesc"]</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-info">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-person-circle text-info"></i> @Localizer["AccountManagement"]
                                    </h5>
                                    <p class="card-text small">@Localizer["AccountManagementDesc"]</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-success">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-envelope text-success"></i> @Localizer["Communication"]
                                    </h5>
                                    <p class="card-text small">@Localizer["CommunicationDesc"]</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-warning">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="bi bi-gear text-warning"></i> @Localizer["Improvement"]
                                    </h5>
                                    <p class="card-text small">@Localizer["ImprovementDesc"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">
                        <i class="bi bi-share text-primary"></i> @Localizer["DataSharing"]
                    </h2>
                    <p>@Localizer["DataSharingIntro"]</p>
                    <ul>
                        <li><strong>@Localizer["ServiceProviders"]:</strong> @Localizer["ServiceProvidersDesc"]</li>
                        <li><strong>@Localizer["LegalRequirements"]:</strong> @Localizer["LegalRequirementsDesc"]</li>
                        <li><strong>@Localizer["BusinessPartners"]:</strong> @Localizer["BusinessPartnersDesc"]</li>
                    </ul>
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <strong>@Localizer["Note"]:</strong> @Localizer["NoDataSaleNote"]
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">
                        <i class="bi bi-shield-lock text-primary"></i> @Localizer["DataSecurity"]
                    </h2>
                    <p>@Localizer["DataSecurityIntro"]</p>
                    <div class="row g-3 mt-2">
                        <div class="col-md-4 text-center">
                            <i class="bi bi-lock-fill text-primary" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">@Localizer["Encryption"]</h6>
                            <small class="text-muted">@Localizer["SslTlsSecurity"]</small>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="bi bi-server text-primary" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">@Localizer["SecureServers"]</h6>
                            <small class="text-muted">@Localizer["IsoCertified"]</small>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="bi bi-key-fill text-primary" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">@Localizer["AccessControl"]</h6>
                            <small class="text-muted">@Localizer["LimitedAccess"]</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">
                        <i class="bi bi-hand-thumbs-up text-primary"></i> @Localizer["YourRights"]
                    </h2>
                    <p>@Localizer["YourRightsIntro"]</p>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["Right"]</th>
                                    <th>@Localizer["Description"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>@Localizer["RightOfAccess"]</strong></td>
                                    <td>@Localizer["RightOfAccessDesc"]</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["RightOfRectification"]</strong></td>
                                    <td>@Localizer["RightOfRectificationDesc"]</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["RightOfErasure"]</strong></td>
                                    <td>@Localizer["RightOfErasureDesc"]</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["RightOfRestriction"]</strong></td>
                                    <td>@Localizer["RightOfRestrictionDesc"]</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["RightToObject"]</strong></td>
                                    <td>@Localizer["RightToObjectDesc"]</td>
                                </tr>
                                <tr>
                                    <td><strong>@Localizer["RightOfPortability"]</strong></td>
                                    <td>@Localizer["RightOfPortabilityDesc"]</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">
                        <i class="bi bi-cookie text-primary"></i> @Localizer["Cookies"]
                    </h2>
                    <p>@Localizer["CookiesIntro"]</p>
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        @Localizer["CookiesWarning"]
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4 border-primary">
                <div class="card-body">
                    <h2 class="h4 mb-3">
                        <i class="bi bi-envelope-at text-primary"></i> @Localizer["Contact"]
                    </h2>
                    <p>@Localizer["ContactIntro"]</p>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-envelope-fill text-primary"></i>
                            <strong> @Localizer["Email"]:</strong> privacy@marketio.nl
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone-fill text-primary"></i>
                            <strong> @Localizer["Phone"]:</strong> +31 (0)20 123 4567
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-geo-alt-fill text-primary"></i>
                            <strong> @Localizer["Address"]:</strong> Marketio B.V., Voorbeeldstraat 123, 1234 AB Amsterdam
                        </li>
                    </ul>
                    <div class="mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-door"></i> @Localizer["BackToHome"]
                        </a>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-box-seam"></i> @Localizer["ViewProducts"]
                        </a>
                    </div>
                </div>
            </div>

            <div class="alert alert-secondary text-center" role="alert">
                <small class="text-muted">
                    <i class="bi bi-calendar-check"></i>
                    @Localizer["LastUpdated", DateTime.Now.ToString("dd MMMM yyyy")]
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth scroll naar sections
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
}
@using Marketio_Web.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Home"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h1 class="display-3 fw-bold mb-4">
                <i class="bi bi-shop"></i> @Localizer["WelcomeToMarketio"]
            </h1>
            <p class="lead text-muted mb-5">
                @Localizer["MarketplaceDescription"]
            </p>

            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="bi bi-box-seam"></i> @Localizer["ViewProducts"]
                </a>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-cart"></i> @Localizer["Orders"]
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-5 g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-lightning-charge text-primary fs-1 mb-3"></i>
                    <h5 class="card-title">@Localizer["FastDelivery"]</h5>
                    <p class="card-text text-muted">@Localizer["FastDeliveryDescription"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-shield-check text-success fs-1 mb-3"></i>
                    <h5 class="card-title">@Localizer["SecurePayment"]</h5>
                    <p class="card-text text-muted">@Localizer["SecurePaymentDescription"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-arrow-repeat text-info fs-1 mb-3"></i>
                    <h5 class="card-title">@Localizer["FreeReturns"]</h5>
                    <p class="card-text text-muted">@Localizer["FreeReturnsDescription"]</p>
                </div>
            </div>
        </div>
    </div>
</div>
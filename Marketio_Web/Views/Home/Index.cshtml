@model IEnumerable<Marketio_Shared.DTOs.ProductDto>
@using Marketio_Shared.Enums

@{
    ViewData["Title"] = "Producten";
    var selectedCategory = ViewBag.SelectedCategory as ProductCategory?;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">
                <i class="bi bi-box-seam"></i> Producten
            </h1>
            @if (selectedCategory.HasValue)
            {
                <p class="lead text-muted">Categorie: <strong>@selectedCategory.Value</strong></p>
            }
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Nieuw Product
            </a>
        </div>
    </div>

    @* Success/Error Messages *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Category Filter *@
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Filter op Categorie</h5>
            <div class="btn-group flex-wrap" role="group">
                <a asp-action="Index"
                   class="btn @(selectedCategory == null ? "btn-primary" : "btn-outline-primary")">
                    Alle Producten
                </a>
                @foreach (ProductCategory category in ViewBag.Categories)
                {
                    <a asp-action="Index"
                       asp-route-category="@category"
                       class="btn @(selectedCategory == category ? "btn-primary" : "btn-outline-primary")">
                        @category
                    </a>
                }
            </div>
        </div>
    </div>

    @* Products Grid *@
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm @(!product.IsActive ? "border-danger" : "")">
                        @* Product Image *@
                        <img src="@product.ImageUrl"
                             class="card-img-top"
                             alt="@product.Name"
                             style="height: 200px; object-fit: cover;"
                             onerror="this.src='https://via.placeholder.com/200x200?text=No+Image'">

                        @* Product Badge *@
                        <div class="position-absolute top-0 end-0 m-2">
                            @if (!product.IsActive)
                            {
                                <span class="badge bg-danger">Inactief</span>
                            }
                            else if (product.Stock == 0)
                            {
                                <span class="badge bg-warning text-dark">Uitverkocht</span>
                            }
                            else if (product.Stock < 10)
                            {
                                <span class="badge bg-info">Laag voorraad</span>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            @* Product Name *@
                            <h5 class="card-title">@product.Name</h5>

                            @* Category Badge *@
                            <p class="mb-2">
                                <span class="badge bg-secondary">@product.CategoryName</span>
                            </p>

                            @* Description *@
                            <p class="card-text text-muted small">
                                @if (product.Description.Length > 80)
                                {
                                    @product.Description.Substring(0, 80)
                        
                                    <text>...</text>
                                }
                                else
                                {
                                    @product.Description
                                }
                            </p>

                            @* Price & Stock *@
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="text-primary mb-0">€@product.Price.ToString("N2")</h4>
                                    <span class="text-muted">
                                        <i class="bi bi-box"></i> @product.Stock stuks
                                    </span>
                                </div>

                                @* Action Buttons *@
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Details"
                                       asp-route-id="@product.Id"
                                       class="btn btn-sm btn-outline-primary"
                                       title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit"
                                       asp-route-id="@product.Id"
                                       class="btn btn-sm btn-outline-warning"
                                       title="Bewerken">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete"
                                       asp-route-id="@product.Id"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Verwijderen">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* Product Count *@
        <div class="mt-4">
            <p class="text-muted text-center">
                Totaal <strong>@Model.Count()</strong> producten gevonden
            </p>
        </div>
    }
    else
    {
        @* No Products Found *@
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle fs-1"></i>
            <h4 class="mt-3">Geen producten gevonden</h4>
            <p class="mb-0">
                @if (selectedCategory.HasValue)
                {
                    <text>Er zijn geen producten in de categorie <strong>@selectedCategory.Value</strong>.</text>
                }
                else
                {
                    <text>Er zijn momenteel geen producten beschikbaar.</text>
                }
            </p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i> Voeg eerste product toe
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alert na 5 seconden
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
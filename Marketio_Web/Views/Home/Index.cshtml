@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h1 class="display-3 fw-bold mb-4">
                <i class="bi bi-shop"></i> Welkom bij Marketio
            </h1>
            <p class="lead text-muted mb-5">
                Uw online marktplaats voor elektronica, kleding, boeken en meer!
            </p>

            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="bi bi-box-seam"></i> Bekijk Producten
                </a>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-cart"></i> Bestellingen
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-5 g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-lightning-charge text-primary fs-1 mb-3"></i>
                    <h5 class="card-title">Snelle Levering</h5>
                    <p class="card-text text-muted">Besteld voor 23:00, morgen in huis</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-shield-check text-success fs-1 mb-3"></i>
                    <h5 class="card-title">Veilig Betalen</h5>
                    <p class="card-text text-muted">Alle betalingsmethoden worden ondersteund</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-arrow-repeat text-info fs-1 mb-3"></i>
                    <h5 class="card-title">Gratis Retour</h5>
                    <p class="card-text text-muted">30 dagen bedenktijd</p>
                </div>
            </div>
        </div>
    </div>
</div>
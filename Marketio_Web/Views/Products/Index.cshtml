@model IEnumerable<Marketio_Shared.DTOs.ProductDto>
@using Marketio_Shared.Enums

@{
    ViewData["Title"] = "Producten";
    var selectedCategory = ViewBag.SelectedCategory as ProductCategory?;
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var minPrice = ViewBag.MinPrice as decimal?;
    var maxPrice = ViewBag.MaxPrice as decimal?;
    var sortBy = ViewBag.SortBy as string ?? "name";
    var lowestPrice = ViewBag.LowestPrice as decimal? ?? 0;
    var highestPrice = ViewBag.HighestPrice as decimal? ?? 1000;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">
                <i class="bi bi-box-seam"></i> Producten
            </h1>
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <p class="lead text-muted">
                    Zoekresultaten voor: <strong>"@searchTerm"</strong>
                </p>
            }
            else if (selectedCategory.HasValue)
            {
                <p class="lead text-muted">Categorie: <strong>@selectedCategory.Value</strong></p>
            }
        </div>
        <div class="col-md-4 text-end">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Nieuw Product
                </a>
            }
        </div>
    </div>

    @* Success/Error Messages *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Sidebar met Filters -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm sticky-top" style="top: 80px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-funnel"></i> Filters
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get" id="filterForm">
                        <!-- Zoekbalk -->
                        <div class="mb-4">
                            <label for="searchTerm" class="form-label fw-bold">
                                <i class="bi bi-search"></i> Zoeken
                            </label>
                            <input type="text"
                                   class="form-control"
                                   id="searchTerm"
                                   name="searchTerm"
                                   value="@searchTerm"
                                   placeholder="Zoek producten...">
                        </div>

                        <!-- Categorie Filter -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-tag"></i> Categorie
                            </label>
                            <select class="form-select" name="category" onchange="this.form.submit()">
                                <option value="">Alle categorieën</option>
                                @foreach (ProductCategory cat in ViewBag.Categories)
                                {
                                    <option value="@cat" selected="@(selectedCategory == cat)">
                                        @cat
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Prijsfilter -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-currency-euro"></i> Prijsrange
                            </label>
                            <div class="mb-2">
                                <input type="number"
                                       class="form-control form-control-sm"
                                       name="minPrice"
                                       value="@minPrice"
                                       placeholder="Min €"
                                       step="0.01"
                                       min="0">
                            </div>
                            <div class="mb-2">
                                <input type="number"
                                       class="form-control form-control-sm"
                                       name="maxPrice"
                                       value="@maxPrice"
                                       placeholder="Max €"
                                       step="0.01"
                                       min="0">
                            </div>
                            <small class="text-muted">
                                Prijs: €@lowestPrice.ToString("N2") - €@highestPrice.ToString("N2")
                            </small>
                        </div>

                        <!-- Sorteer opties -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-sort-down"></i> Sorteer op
                            </label>
                            <select class="form-select" name="sortBy" onchange="this.form.submit()">
                                <option value="name" selected="@(sortBy == "name")">Naam (A-Z)</option>
                                <option value="name-desc" selected="@(sortBy == "name-desc")">Naam (Z-A)</option>
                                <option value="price-asc" selected="@(sortBy == "price-asc")">Prijs (Laag-Hoog)</option>
                                <option value="price-desc" selected="@(sortBy == "price-desc")">Prijs (Hoog-Laag)</option>
                                <option value="newest" selected="@(sortBy == "newest")">Nieuwste</option>
                            </select>
                        </div>

                        <!-- Filter knoppen -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Toepassen
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Wis Filters
                            </a>
                        </div>
                    </form>

                    <!-- Active Filters -->
                    @if (!string.IsNullOrEmpty(searchTerm) || selectedCategory.HasValue || minPrice.HasValue || maxPrice.HasValue)
                    {
                        <div class="mt-3 pt-3 border-top">
                            <h6 class="fw-bold">Actieve filters:</h6>
                            <div class="d-flex flex-wrap gap-1">
                                @if (!string.IsNullOrEmpty(searchTerm))
                                {
                                    <span class="badge bg-info">Zoek: @searchTerm</span>
                                }
                                @if (selectedCategory.HasValue)
                                {
                                    <span class="badge bg-info">@selectedCategory.Value</span>
                                }
                                @if (minPrice.HasValue)
                                {
                                    <span class="badge bg-info">Min: €@minPrice.Value.ToString("N2")</span>
                                }
                                @if (maxPrice.HasValue)
                                {
                                    <span class="badge bg-info">Max: €@maxPrice.Value.ToString("N2")</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- ✅ Products Grid -->
        <div class="col-lg-9">
            @if (Model != null && Model.Any())
            {
                <!-- Result Count & Sort -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <p class="text-muted mb-0">
                        <strong>@Model.Count()</strong> producten gevonden
                    </p>
                </div>

                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var product in Model)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm product-card @(!product.IsActive ? "border-danger" : "")">
                                @* Product Image *@
                                <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                                    <img src="@product.ImageUrl"
                                         class="card-img-top"
                                         alt="@product.Name"
                                         style="height: 200px; object-fit: cover;"
                                         onerror="this.src='https://via.placeholder.com/200x200?text=No+Image'">
                                </a>

                                @* Product Badge *@
                                <div class="position-absolute top-0 end-0 m-2">
                                    @if (!product.IsActive)
                                    {
                                        <span class="badge bg-danger">Inactief</span>
                                    }
                                    else if (product.Stock == 0)
                                    {
                                        <span class="badge bg-warning text-dark">Uitverkocht</span>
                                    }
                                    else if (product.Stock < 10)
                                    {
                                        <span class="badge bg-info">Laag voorraad</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Op voorraad</span>
                                    }
                                </div>

                                <div class="card-body d-flex flex-column">
                                    @* Product Name *@
                                    <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                                        <h5 class="card-title text-dark">@product.Name</h5>
                                    </a>

                                    @* Category Badge *@
                                    <p class="mb-2">
                                        <span class="badge bg-secondary">@product.CategoryName</span>
                                    </p>

                                    @* Description *@
                                    <p class="card-text text-muted small flex-grow-1">
                                        @if (product.Description.Length > 80)
                                        {
                                            @product.Description.Substring(0, 80)
                                            <text>...</text>
                                        }
                                        else
                                        {
                                            @product.Description
                                        }
                                    </p>

                                    @* Price & Stock *@
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h4 class="text-primary mb-0">€@product.Price.ToString("N2")</h4>
                                            <span class="text-muted small">
                                                <i class="bi bi-box"></i> @product.Stock stuks
                                            </span>
                                        </div>

                                        @* Action Buttons *@
                                        <div class="d-grid gap-2">
                                            @* Quick Add to Cart *@
                                            @if (product.IsActive && product.Stock > 0)
                                            {
                                                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="quick-add-form">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="productId" value="@product.Id" />
                                                    <input type="hidden" name="quantity" value="1" />
                                                    <button type="submit" class="btn btn-primary btn-sm w-100">
                                                        <i class="bi bi-cart-plus"></i> Toevoegen
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary btn-sm w-100" disabled>
                                                    <i class="bi bi-x-circle"></i> Niet beschikbaar
                                                </button>
                                            }

                                            @* View Details & Admin Actions *@
                                            <div class="btn-group w-100" role="group">
                                                <a asp-action="Details"
                                                   asp-route-id="@product.Id"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Details">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-action="Edit"
                                                       asp-route-id="@product.Id"
                                                       class="btn btn-sm btn-outline-warning"
                                                       title="Bewerken">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete"
                                                       asp-route-id="@product.Id"
                                                       class="btn btn-sm btn-outline-danger"
                                                       title="Verwijderen">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                @* No Products Found *@
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-info-circle fs-1"></i>
                    <h4 class="mt-3">Geen producten gevonden</h4>
                    <p class="mb-0">
                        Pas je filters aan of probeer een andere zoekterm.
                    </p>
                    <a asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-clockwise"></i> Bekijk alle producten
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Quick add to cart
        document.querySelectorAll('.quick-add-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const button = this.querySelector('button[type="submit"]');
                const originalText = button.innerHTML;

                button.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Toevoegen...';
                button.disabled = true;

                setTimeout(() => {
                    button.innerHTML = '<i class="bi bi-check"></i> Toegevoegd!';
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.disabled = false;
                    }, 1500);
                }, 500);
            });
        });

        // Update cart count
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof updateCartCount === 'function') {
                updateCartCount();
            }
        });
    </script>

    <style>
        .product-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .sticky-top {
            position: sticky;
            z-index: 1020;
        }
    </style>
}
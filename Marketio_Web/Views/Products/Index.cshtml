@model IEnumerable<Marketio_Shared.DTOs.ProductDto>
@using Marketio_Shared.Enums
@using Marketio_Web.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Localizer["Products"];
    var selectedCategory = ViewBag.SelectedCategory as ProductCategory?;
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var minPrice = ViewBag.MinPrice as decimal?;
    var maxPrice = ViewBag.MaxPrice as decimal?;
    var sortBy = ViewBag.SortBy as string ?? "name";
    var lowestPrice = ViewBag.LowestPrice as decimal? ?? 0;
    var highestPrice = ViewBag.HighestPrice as decimal? ?? 1000;
}

<!-- Toast Container -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 11000">
    <div id="cartToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bg-success text-white">
            <i class="bi bi-cart-check me-2"></i>
            <strong class="me-auto">@Localizer["ShoppingCart"]</strong>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            @Localizer["ProductAddedToCart"]
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-funnel"></i> @Localizer["Filters"]
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get">
                        <!-- Category Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">@Localizer["Category"]</label>
                            <select name="category" class="form-select" onchange="this.form.submit()">
                                <option value="">@Localizer["AllCategories"]</option>
                                @foreach (ProductCategory cat in Enum.GetValues<ProductCategory>())
                                {
                                    <option value="@cat" selected="@(selectedCategory == cat)">
                                        @Localizer[$"Category_{cat}"]
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Price Range Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">@Localizer["PriceRange"]</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" name="minPrice" class="form-control"
                                           placeholder="@Localizer["Min"]" value="@minPrice" step="0.01">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="maxPrice" class="form-control"
                                           placeholder="@Localizer["Max"]" value="@maxPrice" step="0.01">
                                </div>
                            </div>
                        </div>

                        <!-- Sort By -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">@Localizer["SortBy"]</label>
                            <select name="sortBy" class="form-select" onchange="this.form.submit()">
                                <option value="name" selected="@(sortBy == "name")">@Localizer["Sort_NameAsc"]</option>
                                <option value="name-desc" selected="@(sortBy == "name-desc")">@Localizer["Sort_NameDesc"]</option>
                                <option value="price-asc" selected="@(sortBy == "price-asc")">@Localizer["Sort_PriceAsc"]</option>
                                <option value="price-desc" selected="@(sortBy == "price-desc")">@Localizer["Sort_PriceDesc"]</option>
                                <option value="newest" selected="@(sortBy == "newest")">@Localizer["Sort_Newest"]</option>
                            </select>
                        </div>

                        <input type="hidden" name="searchTerm" value="@searchTerm" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-funnel-fill"></i> @Localizer["ApplyFilters"]
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> @Localizer["ResetFilters"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">
                    <i class="bi bi-box-seam"></i> @Localizer["Products"]
                </h1>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> @Localizer["AddProduct"]
                    </a>
                }
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <p class="text-muted mb-0">
                        <strong>@Model.Count()</strong> @Localizer["ProductsFound"]
                    </p>
                </div>

                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var product in Model)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm product-card @(!product.IsActive ? "border-danger" : "")">
                                <!-- Product Image -->
                                <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                                    <img src="@product.ImageUrl"
                                         class="card-img-top"
                                         alt="@product.Name"
                                         style="height: 200px; object-fit: cover;"
                                         onerror="this.src='https://via.placeholder.com/200x200?text=No+Image'">
                                </a>

                                <!-- Badge -->
                                <div class="position-absolute top-0 end-0 m-2">
                                    @if (!product.IsActive)
                                    {
                                        <span class="badge bg-danger">@Localizer["Inactive"]</span>
                                    }
                                    else if (product.Stock == 0)
                                    {
                                        <span class="badge bg-warning text-dark">@Localizer["OutOfStock"]</span>
                                    }
                                    else if (product.Stock < 10)
                                    {
                                        <span class="badge bg-info">@Localizer["LowStock"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@Localizer["InStock"]</span>
                                    }
                                </div>

                                <div class="card-body d-flex flex-column">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                                        <h5 class="card-title text-dark">@product.Name</h5>
                                    </a>

                                    <p class="mb-2">
                                        <span class="badge bg-secondary">@Localizer[$"Category_{product.Category}"]</span>
                                    </p>

                                    <p class="card-text text-muted small flex-grow-1">
                                        @if (product.Description.Length > 80)
                                        {
                                            @product.Description.Substring(0, 80)
                                
                                            <text>...</text>
                                        }
                                        else
                                        {
                                            @product.Description
                                        }
                                    </p>

                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h4 class="text-primary mb-0">€@product.Price.ToString("N2")</h4>
                                            <span class="text-muted small">
                                                <i class="bi bi-box"></i> @product.Stock @Localizer["Units"]
                                            </span>
                                        </div>

                                        <div class="d-grid gap-2">
                                            @if (product.IsActive && product.Stock > 0)
                                            {
                                                <button type="button"
                                                        class="btn btn-primary btn-sm w-100 ajax-add-to-cart"
                                                        data-product-id="@product.Id"
                                                        data-product-name="@product.Name">
                                                    <i class="bi bi-cart-plus"></i> @Localizer["AddToCart"]
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary btn-sm w-100" disabled>
                                                    <i class="bi bi-x-circle"></i> @Localizer["NotAvailable"]
                                                </button>
                                            }

                                            <div class="btn-group w-100" role="group">
                                                <a asp-action="Details"
                                                   asp-route-id="@product.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> @Localizer["Details"]
                                                </a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle fs-1"></i>
                    <h4 class="mt-3">@Localizer["NoProductsFound"]</h4>
                    <p class="mb-0">@Localizer["AdjustFilters"]</p>
                    <a asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-clockwise"></i> @Localizer["ViewAllProducts"]
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value ||
                         '@Html.AntiForgeryToken()'.match(/value="([^"]+)"/)?.[1];

            document.querySelectorAll('.ajax-add-to-cart').forEach(button => {
                button.addEventListener('click', async function(e) {
                    e.preventDefault();

                    const productId = this.dataset.productId;
                    const productName = this.dataset.productName;
                    const originalHtml = this.innerHTML;

                    this.innerHTML = '<span class="spinner-border spinner-border-sm"></span> @Localizer["Adding"]...';
                    this.disabled = true;

                    try {
                        const response = await fetch('@Url.Action("AddToCart", "Cart")', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                'X-Requested-With': 'XMLHttpRequest',
                                'RequestVerificationToken': token
                            },
                            body: `productId=${productId}&quantity=1&__RequestVerificationToken=${encodeURIComponent(token)}`
                        });

                        const result = await response.json();

                        if (result.success) {
                            this.innerHTML = '<i class="bi bi-check-circle"></i> @Localizer["Added"]!';
                            this.classList.remove('btn-primary');
                            this.classList.add('btn-success');

                            updateCartCount();
                            showToast(`${productName} @Localizer["ProductAddedToCart"]`, 'success');

                            setTimeout(() => {
                                this.innerHTML = originalHtml;
                                this.classList.remove('btn-success');
                                this.classList.add('btn-primary');
                                this.disabled = false;
                            }, 2000);
                        } else {
                            throw new Error(result.message || '@Localizer["ErrorOccurred"]');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        showToast(error.message || '@Localizer["ErrorAddingToCart"]', 'error');

                        this.innerHTML = originalHtml;
                        this.disabled = false;
                    }
                });
            });

            function showToast(message, type = 'success') {
                const toastEl = document.getElementById('cartToast');
                const toastBody = document.getElementById('toastMessage');
                const toastHeader = toastEl.querySelector('.toast-header');

                if (type === 'success') {
                    toastHeader.classList.remove('bg-danger');
                    toastHeader.classList.add('bg-success');
                    toastBody.textContent = message;
                } else {
                    toastHeader.classList.remove('bg-success');
                    toastHeader.classList.add('bg-danger');
                    toastBody.textContent = message;
                }

                const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                toast.show();
            }

            if (typeof updateCartCount === 'function') {
                updateCartCount();
            }
        });

        setTimeout(() => $('.alert').fadeOut('slow'), 5000);
    </script>

    <style>
        .product-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            }

        .sticky-top {
            position: sticky;
            z-index: 1020;
        }

        .toast {
            min-width: 300px;
        }
    </style>
}
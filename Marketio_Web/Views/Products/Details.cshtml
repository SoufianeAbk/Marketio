@model Marketio_Shared.DTOs.ProductDto
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> Localizer

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Products"]</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-route-category="@Model.Category">@Localizer[$"Category_{Model.Category}"]</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    @* Success/Error Messages *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <img src="@Model.ImageUrl"
                     class="card-img-top"
                     alt="@Model.Name"
                     style="height: 400px; object-fit: cover;"
                     onerror="this.src='https://via.placeholder.com/400x400?text=No+Image'">
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-md-6">
            <div class="mb-3">
                <span class="badge bg-secondary fs-6">@Localizer[$"Category_{Model.Category}"]</span>
                @if (!Model.IsActive)
                {
                    <span class="badge bg-danger fs-6">@Localizer["Inactive"]</span>
                }
                else if (Model.Stock == 0)
                {
                    <span class="badge bg-warning text-dark fs-6">@Localizer["OutOfStock"]</span>
                }
                else if (Model.Stock < 10)
                {
                    <span class="badge bg-info fs-6">@Localizer["LimitedStock"]</span>
                }
            </div>

            <h1 class="display-5 fw-bold mb-3">@Model.Name</h1>

            <h2 class="text-primary mb-4">€@Model.Price.ToString("N2")</h2>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ProductDescription"]</h5>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

            <!-- Stock Info -->
            <div class="alert @(Model.Stock > 0 ? "alert-success" : "alert-danger") mb-4">
                <i class="bi @(Model.Stock > 0 ? "bi-check-circle" : "bi-x-circle")"></i>
                <strong>@Localizer["Stock"]:</strong> @Model.Stock @Localizer["Units"]
                @if (Model.Stock > 0 && Model.Stock < 10)
                {
                    <span class="ms-2 text-muted">(@Localizer["OnlyUnitsLeft", Model.Stock])</span>
                }
            </div>

            <!-- Add to Cart Form -->
            @if (Model.IsActive && Model.Stock > 0)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mb-4">
                    <input type="hidden" name="productId" value="@Model.Id" />

                    <div class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label for="quantity" class="form-label">@Localizer["Quantity"]</label>
                            <div class="input-group">
                                <button class="btn btn-outline-secondary" type="button" onclick="decreaseQuantity()">
                                    <i class="bi bi-dash"></i>
                                </button>
                                <input type="number"
                                       class="form-control text-center"
                                       id="quantity"
                                       name="quantity"
                                       value="1"
                                       min="1"
                                       max="@Model.Stock"
                                       required>
                                <button class="btn btn-outline-secondary" type="button" onclick="increaseQuantity(@Model.Stock)">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-cart-plus"></i> @Localizer["AddToCartButton"]
                            </button>
                        </div>
                    </div>
                </form>

                <div class="d-flex gap-2 mb-4">
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-cart"></i> @Localizer["ViewCart"]
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> @Localizer["BackToProducts"]
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    @Localizer["ProductNotAvailable"]
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> @Localizer["BackToProducts"]
                </a>
            }

            <!-- Product Features -->
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">@Localizer["ProductFeatures"]</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-truck text-primary"></i> @Localizer["FreeShippingAbove50"]
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-arrow-repeat text-success"></i> @Localizer["ReturnPolicy30Days"]
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-shield-check text-info"></i> @Localizer["Warranty2Years"]
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-lightning-charge text-warning"></i> @Localizer["DeliveryTomorrow"]
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Actions -->
    @if (User.IsInRole("Admin"))
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">
                            <i class="bi bi-tools"></i> @Localizer["AdminActions"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> @Localizer["Edit"]
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> @Localizer["Delete"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        function increaseQuantity(maxStock) {
            const input = document.getElementById('quantity');
            const currentValue = parseInt(input.value);
            if (currentValue < maxStock) {
                input.value = currentValue + 1;
            }
        }

        function decreaseQuantity() {
            const input = document.getElementById('quantity');
            const currentValue = parseInt(input.value);
            if (currentValue > 1) {
                input.value = currentValue - 1;
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            if (typeof updateCartCount === 'function') {
                updateCartCount();
            }
        });
    </script>
}
@model Marketio_Shared.DTOs.ProductDto
@using Marketio_Shared.Enums

@{
    ViewData["Title"] = "Nieuw Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">
                <i class="bi bi-plus-circle"></i> Nieuw Product Toevoegen
            </h1>

            <form asp-action="Create" method="post" class="needs-validation">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Bijv. iPhone 15 Pro" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Beschrijving van het product"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">€</span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label"></label>
                                <input asp-for="Stock" class="form-control" type="number" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <select asp-for="Category" class="form-select">
                                <option value="">-- Selecteer Categorie --</option>
                                @foreach (ProductCategory category in ViewBag.Categories)
                                {
                                    <option value="@((int)category)">@category</option>
                                }
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label"></label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="/images/product.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="card-footer bg-white">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Opslaan
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Annuleren
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}